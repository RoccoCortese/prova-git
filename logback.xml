<configuration scan="true">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
  
  <logger name="it.unibas.gestioneuniversita.test.TestArchivio" level="debug"/>  
  <logger name="it.unibas.gestioneuniversita.modello" level="debug"/>   
</configuration>